<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>NodeNews</title>
    <link href="https://fonts.googleapis.com/css2?family=Source+Sans+Pro&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="/css/card.css">
</head>
<body>
    <header>
        <div class="nav">
            <ul>
              <li><a href="/" class="nav-link">Top headlines</a></li>
              <li><a href="/country" class="nav-link">Country</a></li>
              <li><a href="/category" class="nav-link">Category</a></li>
            </ul>
          </div>
    </header>
    <div class="cards-list">
        <%if(countries !== null) {%>
        <%countries.forEach((country)=>{ %>
            <a  href="country/<%-country.alpha2Code.toLowerCase()%>" class="news__card">
                <div class="card 1">
                    <div class="card_image"> <img src="<%-country.flag%>" alt="<%-country.alpha2Code%>"/></div>
                    <div class="card_title title-white">
                      <p><%-country.name%></p>
                    </div>
                  </div>
            </a>
        <%})%>
        <%}else {%>
            <h1>No Countries Found</h1>
        <%}%>
        </div>
</body>
</html>